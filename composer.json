{
    "name": "expect/expect",
    "license": "MIT",
    "description": "Expectation library for unit testing",
    "keywords": [
        "expect", "assert", "test", "spec", "bdd"
    ],
    "authors": [
        {
            "name": "Noritaka Horio",
            "email": "holy.shared.design@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "easyframework/collections": "~4.0",
        "yosymfony/toml": "~0.3"
    },
    "require-dev": {
        "peridot-php/peridot": "~1.15",
        "peridot-php/peridot-dot-reporter": "~1.0",
        "beberlei/assert": "~2.3",
        "phpspec/prophecy": "~1.3",
        "cloak/peridot-cloak": "~1.1",
        "cloak/robo-coveralls-kit": "~1.0",
        "robo-peridot/robo-peridot": "~1.0",
        "codegyre/robo": "~0.5"
    },
    "autoload": {
        "psr-4": {
            "expect\\": "src"
        },
        "files": [
            "src/Utility.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "expect\\fixture\\matcher\\": "spec/fixtures/matcher",
            "expect\\fixture\\package\\": "spec/fixtures/package",
            "expect\\fixture\\reporter\\": "spec/fixtures/reporter"
        }
    },
    "scripts": {
        "test": "vendor/bin/robo spec:all",
        "coveralls": "vendor/bin/robo coveralls:upload",
        "fixer": "php-cs-fixer fix src --config-file"
    }
}
